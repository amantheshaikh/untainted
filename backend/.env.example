# Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# REQUIRED
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# API Keys (comma-separated list of valid API keys)
# Use sk_test_ prefix for sandbox/test keys, sk_live_ for production
API_KEYS=sk_test_your_test_key,sk_live_your_live_key

# =============================================================================
# OPTIONAL
# =============================================================================

# Google Gemini API (required for /extract/ingredients and /extract/nutrition)
GEMINI_API_KEY=your-gemini-api-key

# Rate Limiting (requests per minute)
ANON_RATE_LIMIT_PER_MIN=30
KEY_RATE_LIMIT_PER_MIN=1000

# VLM Rate Limiting - Stricter limits for expensive Gemini API calls
# Used by /extract/ingredients and /extract/nutrition endpoints
VLM_ANON_RATE_LIMIT_PER_MIN=5
VLM_KEY_RATE_LIMIT_PER_MIN=100

# OpenFoodFacts Configuration
OFF_COUNTRY=world
OFF_LANGUAGE=en
OFF_TAXONOMY_LANGS=en

# Dietary Thresholds (grams per 100g)
DIABETIC_SUGARS_PER_100G_THRESHOLD=5
KETO_NET_CARBS_PER_100G_THRESHOLD=5

# =============================================================================
# LOGGING
# =============================================================================

# Environment (development or production)
# In production, logs are output as JSON for log aggregation
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
